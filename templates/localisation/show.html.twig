{% extends 'base.html.twig' %}

{% block title %}Localisation{% endblock %}

{% block body %}
    <h1>Localisation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ localisation.id }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ localisation.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ localisation.longitude }}</td>
            </tr>
            <tr>
                <th>Address</th>
