{% extends 'base.html.twig' %}

{% block title %}Add Metier{% endblock %}

{% block body %}
    <h1>Add Metier </h1>
    <h2>Partenaire {{ partenaire.nom }} {{ partenaire.prenom }}</h2>
    <h2>Liste des metiers</h2>
    <table class="table">
    <thead>
        <tr>
            <th>Nom metier</th>
        </tr>
    </thead>
    <tbody>
        {% for metier in partenaire.metiers %}
        <tr>
            <td>{{ metier.nom }}</td>
        </tr>
        {% else %}
        <tr>
            <td>no records found</td>
        </tr>
        {% endfor %}
    </tbody>
    <p>
    </table>
    {{ include('metier/_form.html.twig') }}
    <a href="{{ path('partenaire_show', {'id': partenaire.id}) }}">back to show</a>
    </p>
{% endblock %}
