{% extends 'base.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}
    <h1>Evenement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evenement.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ evenement.nom }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ evenement.date ? evenement.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    {{ include('_edit_button.html.twig',{'action_path':'evenement_edit','id_value':evenement.id,'label':'Editer cette entrée'}) }}
    {{ include('evenement/_delete_form.html.twig') }}
    {{ include('_list_button.html.twig', {'action_path':'evenement_index','label':'Liste des événements'}) }}

{% endblock %}
