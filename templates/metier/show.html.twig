{% extends 'base.html.twig' %}

{% block title %}
Metier
{% endblock %}

{% block body %}
<h2>
	Metier :
	{{ metier.nom }}
</h2>
<h3>Types de prestations</h3>
<table class="table">
	<thead>
		<tr>
			<th>NomType</th>
			<th>Description</th>
		</tr>
	</thead>
	<tbody>
		{% for type_prestation in metier.typesPrestation %}
		<tr>
			<td>{{ type_prestation.nomType }}</td>
			<td>{{ type_prestation.description }}</td>
		</tr>
		{% else %}
		<tr>
			<td colspan="4">no records found</td>
		</tr>
		{% endfor %}
	</tbody>
</table>

    {{ include('_edit_button.html.twig',{'action_path':'metier_edit','id_value':metier.id,'label':'Editer ce métier'}) }}
    {{ include('_list_button.html.twig', {'action_path':'metier_index','label':'Liste des métiers'}) }}
{% endblock %}
