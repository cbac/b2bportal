{% extends 'base.html.twig' %}

{% block title %}
Metier
{% endblock %}

{% block body %}
<h1>
	Metier :
	{{ metier.nom }}
</h1>
<h2>Types de prestations</h2>
<table class="table">
	<thead>
		<tr>
			<th>NomType</th>
			<th>Description</th>
		</tr>
	</thead>
	<tbody>
		{% for type_prestation in metier.typesPrestation %}
		<tr>
			<td>{{ type_prestation.nomType }}</td>
			<td>{{ type_prestation.description }}</td>
		</tr>
		{% else %}
		<tr>
			<td colspan="4">no records found</td>
		</tr>
		{% endfor %}
	</tbody>
</table>

{{ include('metier/_edit_button.html.twig') }}
{{ include('metier/_back_to_list_button.html.twig') }}
{% endblock %}
